<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Liked Songs</title>
  <link rel="stylesheet"  type="text/css" href="/main.css" />
  <link rel="stylesheet" href="/table.css">
</head>
<body>
  <h1>Liked Songs</h1>

  <table border="1">
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (likedSongs.length > 0) { %>
        <% likedSongs.forEach((song) => { %>
          <tr>
            <td><%= song.name %></td> 
            <td><%= song.artist %></td> 
            <td>
              <form action="/playlists/remove_liked_song/<%= song.id %>" method="get" onsubmit="return confirm('Are you sure you want to unlike this song?');">
                <button type="submit" class="remove-button">Unlike</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="3">No liked songs found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <!-- Back Button -->
  <button  id="go-back-btn" onclick="window.location.href='./'">Go Back</button>
  
</body>
</html>
